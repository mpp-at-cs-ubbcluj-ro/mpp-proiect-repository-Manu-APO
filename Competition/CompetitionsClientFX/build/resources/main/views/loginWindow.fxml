<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
          prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/18">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Button fx:id="loginBT" mnemonicParsing="false" prefHeight="25.0" prefWidth="208.0" text="LOGIN"
                GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label fx:id="loginLB" alignment="CENTER" contentDisplay="TOP" prefHeight="30.0" prefWidth="200.0"
               text="Competition App" textAlignment="CENTER" wrapText="true" GridPane.columnIndex="1"
               GridPane.rowIndex="1">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <PasswordField fx:id="passwordTF" promptText="password" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <TextField fx:id="usernameTF" promptText="username" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    </children>
</GridPane>
